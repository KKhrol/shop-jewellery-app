// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String @id @default(uuid())
  image       String
  itemName    String
  description String
  metalImage  String
  price       Int

  @@map("items")
  Cart Cart[]
}

model Cart {
  userId String @default(uuid())

  item     Item   @relation(fields: [itemId], references: [id])
  itemId   String
  quantity Int

  @@id([userId, itemId])
  @@map("cart")
}
