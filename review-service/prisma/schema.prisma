generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  userId    String  @default(uuid())
  itemId  String    @default(uuid())
  mark     Float

  @@id([userId, itemId])
  @@map("reviews")
}